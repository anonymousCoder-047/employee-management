<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/headers') %>
    <title>Dashboard</title>
</head>
<body>
    <div class="jumbotron" style="background-color: black;color: white;">
        <h3 style="text-align: center;text-transform: uppercase;">
            enter sales person details
        </h3>
    </div>
    <form method="POST" action="/upload" enctype="multipart/form-data">
        <div class="row">
            <div class="col s2"></div>
            <div class="col s5">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="sp_name" id="sp_name" class="form-control">
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="number" name="sp_phone" id="sp_phone" class="form-control">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" name="sp_address" id="sp_address" class="form-control">
                </div>
            </div>
            <div class="col s4">
                <div class="form-group">
                    <label for="age">Age</label>
                    <input type="number" name="sp_age" id="sp_age">
                </div>
                <div class="file-field input-field">
                    <div class="btn">
                      <span>Upload</span>
                      <input type="file" name="sp_image">
                    </div>
                    <div class="file-path-wrapper">
                      <input class="file-path validate" type="text" placeholder="upload image">
                    </div>
                </div>
                <div class="form-group">
                    <label for="salary">Salary</label>
                    <input type="number" min="0.01" step="0.01" name="sp_salary" id="sp_salary" class="form-control">
                </div>
            </div>
            <div class="col s2"></div>
        </div>
        <div class="row">
            <div class="col s2"></div>
            <div class="col s3">
                <input type="submit" value="submit" class="btn btn-success btn-block">
            </div>
        </div>
    </form>
</body>
</html>